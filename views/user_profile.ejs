<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    netbook / Profile Page
</h1>

<img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">

<% if(user.id=profile_user.id) { %>
    <form action="/users/update/<%= profile_user.id %>" method="post" enctype="multipart/form-data" >
        <input type="text" name="name"  placeholder="name" value="<%= profile_user.name %>">
        <input type="email" name="email"  placeholder="email" value="<%= profile_user.email %>"> 
        <input type="file" name="avatar" placeholder="Profile Pic">
        <input type="submit" value="update">
    </form>
    <% }else{ %>
<p>Name: <%= user.name %></p>
<p>Email:<%= user.email %></p>
<% } %>
